<div class="subheader">
  <div class="container">
	<div class="row">
	  <div class="span2">
	  </div>
	  <div class="span10">
		<form class="form-inline" style="margin-bottom:0px">
		  <button type="button" id="list-pane-add-button" class="btn btn-primary"><i class="icon-pencil icon-white"></i>&nbsp;追加</button>
		  &nbsp;&nbsp;&nbsp;
		  <div class="input-append">
			<input type="text" class="input-xlarge" placeholder="検索">
		  	<button type="button" class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></button>
		  </div>
